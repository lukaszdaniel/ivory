# Low-level tests for the CXXR classes.

uname = $(shell uname)

VPATH = @srcdir@
srcdir = @srcdir@
top_srcdir = @top_srcdir@

top_builddir = ../..
subdir = tests/CXXR2

R = LANGUAGE=en LC_ALL=C $(top_builddir)/bin/R --vanilla --quiet
RDIFF = $(top_builddir)/bin/R CMD Rdiff
REXEC= $(top_builddir)/bin/exec/R

include $(top_builddir)/Makeconf

tests = miscR

test-CXXR2 : $(tests:=.ts)

miscR.ts : $(REXEC) misc.R misc.save
	$(R) < $(srcdir)/misc.R > misc.Rout 2>&1
	diff $(srcdir)/misc.save misc.Rout
	rm misc.Rout
	touch $@

Makefile : $(srcdir)/Makefile.in $(top_builddir)/config.status
	cd $(top_builddir) && $(SHELL) ./config.status $(subdir)/$@

clean:
	rm -f *.ts

distclean: clean
	rm -f Makefile

include $(depends)
