>     newcon->truncate = &null_truncate;
>     newcon->fflush = &null_fflush;
>     newcon->read = &null_read;
>     newcon->write = &null_write;
>     newcon->nPushBack = 0;
>     newcon->save = newcon->save2 = -1000;
>     newcon->conprivate = NULL;
>     newcon->inconv = newcon->outconv = NULL;
