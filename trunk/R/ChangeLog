> static R_INLINE void SET_TEMPVARLOC_FROM_CAR(R_varloc_t loc, SEXP lhs) {
>         SEXP v = CAR(lhs);
>         if (MAYBE_SHARED(v)) {
>             v = shallow_duplicate(v);
>             SET_NAMED(v, 1);
>             SETCAR(lhs, v);
>         }
>         R_SetVarLocValue(loc, v);
>  }
