#
# ${R_HOME}/src/include/CXXR/Makefile

VPATH = @srcdir@
srcdir = @srcdir@
top_srcdir = @top_srcdir@

top_builddir = ../../..
subdir = src/include/CXXR

include $(top_builddir)/Makeconf

distdir = $(top_builddir)/$(PACKAGE)-$(VERSION)/$(subdir)

## Partially included by the API (1) headers in .., but not part of the
## API per se. 
CXXR_HEADERS = Allocator.hpp RAllocStack.hpp CellPool.hpp MemoryBank.hpp GCEdge.hpp GCManager.hpp \
  GCNode.hpp GCRoot.hpp RObject.hpp ConsCell.hpp BuiltInFunction.hpp Closure.hpp Expression.hpp \
  ExpressionVector.hpp ExternalPointer.hpp Environment.hpp Frame.hpp FunctionBase.hpp \
  Complex.hpp Logical.hpp String.hpp VectorBase.hpp FixedVector.hpp ComplexVector.hpp RealVector.hpp \
  IntVector.hpp ListVector.hpp LogicalVector.hpp PairList.hpp RawVector.hpp StringVector.hpp\
  PredefinedSymbols.hpp RTypes.hpp SEXP_downcast.hpp SEXPTYPE.hpp S4Object.hpp Symbol.hpp Promise.hpp WeakRef.hpp

DISTFILES = Makefile.in $(CXXR_HEADERS)
TIMESTAMPS = $(CXXR_HEADERS:.hpp=.ts)

CLEANFILES = stamp-R $(TIMESTAMPS)
DISTCLEANFILES = Makefile

.SUFFIXES:
.SUFFIXES: .hpp .ts

.hpp.ts: 
	@$(INSTALL_DATA) $< $(top_builddir)/include/CXXR/`basename $<`
	@touch $@

all: Makefile R

Makefile: $(srcdir)/Makefile.in $(top_builddir)/config.status
	@cd $(top_builddir) && $(SHELL) ./config.status $(subdir)/$@

R: Makefile stamp-R $(TIMESTAMPS)
stamp-R: 
	@$(MKINSTALLDIRS) $(top_builddir)/include/CXXR
	@touch $@
$(TIMESTAMPS): stamp-R

install: installdirs
	@for f in $(CXXR_HEADERS); do \
	  $(INSTALL_DATA) $(srcdir)/$${f} "$(DESTDIR)$(rincludedir)/CXXR"; \
	done
installdirs:
	@$(MKINSTALLDIRS) "$(DESTDIR)$(rincludedir)/CXXR"
install-strip:
	$(MAKE) INSTALL_PROGRAM="${INSTALL_PROGRAM} -s" install
uninstall:
	@rm -rf "$(DESTDIR)$(rincludedir)/CXXR"

mostlyclean: clean
clean:
	-@test -z "$(CLEANFILES)" || rm -f $(CLEANFILES)
distclean: clean
	-@test -z "$(DISTCLEANFILES)" || rm -f $(DISTCLEANFILES)
maintainer-clean: distclean

TAGS info dvi check:

distdir: $(DISTFILES)
	@for f in $(DISTFILES); do \
	  test -f $(distdir)/$${f} \
	    || ln $(srcdir)/$${f} $(distdir)/$${f} 2>/dev/null \
	    || cp -p $(srcdir)/$${f} $(distdir)/$${f}; \
	done
